                axisLine={{ stroke: '#e2e8f0' }}
              />
              <Tooltip 
                contentStyle={{ 
                  backgroundColor: '#fff', 
                  border: 'none',
                  borderRadius: '8px',
                  boxShadow: '0 4px 12px rgba(0,0,0,0.1)',
                  padding: '10px'
                }}
              />
              <Area 
                type="monotone" 
                dataKey="actions" 
                stroke="#3b82f6" 
                strokeWidth={2}
                fill="url(#colorActions)"
                name="Actions"
              />
            </AreaChart>
          </ResponsiveContainer>
        </div>

        {/* User Distribution Chart */}
        <div className="flex flex-col gap-4 rounded-2xl bg-white p-8 shadow-xl lg:col-span-2 border border-slate-200/50">
          <div>
            <p className="text-base font-semibold text-slate-900">User Role Distribution</p>
            <p className="mt-1 text-3xl font-bold text-slate-900">
              {stats.totalUsers.toLocaleString()} Users
            </p>
